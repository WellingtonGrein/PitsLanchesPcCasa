<!DOCTYPE html>
<html lang="pt-br">
<head>
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PitsLanches</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light public-navbar">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/PitsLanches.png" class="public-navbar-logo" alt="PitsLanches Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        @await Component.InvokeAsync("CategoriaMenu")
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Contato" asp-action="Index">Contato</a></li>
                    </ul>
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item me-3">
                            <form class="d-flex" asp-controller="Lanche" asp-action="Search" method="get">
                                <input type="text" class="form-control search-form-control" placeholder="Procurar lanche..." name="searchString" value="@ViewData["searchString"]">
                            </form>
                        </li>
                        @await Component.InvokeAsync("CarrinhoCompraResumo")
                        @await Html.PartialAsync("_LoginPartial")
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-3">
                                <a class="nav-link admin-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-shield-lock-fill me-1"></i> Admin
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4 flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-pitslanches text-light">
        <div class="container text-center">
             <p class="mb-0">&copy; 2025 - PitsLanches - O melhor lanche da região, feito com ingredientes frescos e muito carinho.</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>