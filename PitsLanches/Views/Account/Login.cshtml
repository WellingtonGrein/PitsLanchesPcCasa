@model LoginViewModel

<div class="login-container">

    <div class="login-image-side">
    </div>

    <div class="login-form-side">
        <div class="login-card">
            <h2>Bem-vindo de volta!</h2>
            <form asp-controller="Account" asp-action="Login" method="post" role="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Nome de Usuário</label>
                    <input asp-for="UserName" class="form-control" placeholder="Digite seu usuário" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label">Senha</label>
                    <input asp-for="Password" class="form-control" placeholder="Digite sua senha" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <input type="submit" class="btn btn-primary btn-lg" value="Entrar" />
                </div>

                <div class="link-cadastro">
                    <p>Não tem uma conta? <a asp-controller="Account" asp-action="Register">Registre-se</a></p>
                </div>
            </form>
        </div>
    </div>
</div>