@model LancheListViewModel

<style>
    .lanche-img {
        width: 225px !important;
        height: 225px !important;
        object-fit: cover !important;
    }
</style>

<div>
    <h2>@Model.CategoriaAtual</h2>
</div>

<div class="container">
    <div class="row">

        @foreach (var lanche in Model.Lanches)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img src="@lanche.ImagemURL" class="lanche-img img-fluid"></p>
                <h4>Preco : @lanche.Preco.ToString("c")</h4>
                <h4>@lanche.Nome</h4>
                <p>@lanche.DescricaoCurta</p>
            </div>
        }
    </div>
</div>