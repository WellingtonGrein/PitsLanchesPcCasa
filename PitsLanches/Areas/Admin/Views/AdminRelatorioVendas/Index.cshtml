@{
    ViewData["Title"] = "Relatório de Vendas";
}

<div class="admin-page-header">
    <h1>Relatório de Vendas</h1>
</div>

<div class="admin-content-card">
    <form class="admin-form" asp-action="RelatorioVendasSimples">

        <h4>Filtrar por Período</h4>
        <p class="text-muted">Selecione as datas de início e fim para gerar o relatório de vendas.</p>
        <hr />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="minDate" class="form-label">Data Inicial</label>
                <input type="date" name="minDate" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label for="maxDate" class="form-label">Data Final</label>
                <input type="date" name="maxDate" class="form-control" />
            </div>
        </div>

        <div class="admin-form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-file-earmark-bar-graph-fill me-2"></i> Gerar Relatório
            </button>
        </div>
    </form>
</div>