@{
    ViewData["Title"] = "Gerenciar Imagens";
}

<div class="admin-page-header">
    <h1>Gerenciar Imagens</h1>
</div>

@if (ViewData["Deletado"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @ViewData["Deletado"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="action-card">
            <div class="action-card-icon text-primary"><i class="bi bi-cloud-arrow-up-fill"></i></div>
            <h4>Enviar Novas Imagens</h4>
            <p class="text-muted">Selecione um ou mais arquivos de imagem do seu computador. Arquivos com o mesmo nome serão sobrescritos.</p>
            <form class="mt-auto" method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="UploadFiles">
                <label class="file-upload-label w-100">
                    <i class="bi bi-upload"></i>
                    <div>Clique aqui para selecionar os arquivos</div>
                    <input type="file" name="files" multiple class="d-none" onchange="this.form.submit()" />
                </label>
            </form>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="action-card">
            <div class="action-card-icon text-info"><i class="bi bi-images"></i></div>
            <h4>Visualizar Galeria</h4>
            <p class="text-muted">Veja todas as imagens que já foram enviadas para o servidor e delete as que não são mais necessárias.</p>
            <form class="mt-auto" method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="GetImagens">
                <div class="d-grid">
                    <button type="submit" class="btn btn-outline-info btn-lg">Visualizar Imagens no Servidor</button>
                </div>
            </form>
        </div>
    </div>
</div>