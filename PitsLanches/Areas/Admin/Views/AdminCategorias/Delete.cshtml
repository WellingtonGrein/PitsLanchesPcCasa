@model PitsLanches.Models.Categoria
@{
    ViewData["Title"] = "Deletar Categoria";
}

<div class="admin-page-header">
    <h1>Deletar Categoria</h1>
</div>

<div class="admin-content-card">
    <div class="text-center">
        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
        <h3 class="mt-3">Confirmação de Exclusão</h3>
        <p class="lead">Você tem certeza que deseja deletar permanentemente a categoria abaixo?</p>
    </div>

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CategoriaNome)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CategoriaNome)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
            </dl>
        </div>
    </div>

    <div class="admin-form-actions justify-content-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="CategoriaId" />
            <input type="submit" value="Sim, Deletar Permanentemente" class="btn btn-danger btn-lg" />
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancelar</a>
        </form>
    </div>
</div>