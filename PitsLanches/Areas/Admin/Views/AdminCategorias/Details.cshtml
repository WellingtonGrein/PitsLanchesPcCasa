@model PitsLanches.Models.Categoria
@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<div class="admin-page-header">
    <h1>Detalhes da Categoria</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-2"></i> Voltar para a Lista
    </a>
</div>

<div class="admin-content-card">
    <dl class="row p-3">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <div class="admin-form-actions">
        <a asp-action="Edit" asp-route-id="@Model?.CategoriaId" class="btn btn-primary">
            <i class="bi bi-pencil-fill me-2"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</div>