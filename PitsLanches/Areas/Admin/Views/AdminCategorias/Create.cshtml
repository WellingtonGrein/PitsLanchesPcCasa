@model PitsLanches.Models.Categoria
@{
    ViewData["Title"] = "Criar Categoria";
}

<div class="admin-page-header">
    <h1>Nova Categoria</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-2"></i> Voltar para a Lista
    </a>
</div>

<div class="admin-content-card">
    <form asp-action="Create" class="admin-form">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="CategoriaNome" class="form-label"></label>
                <input asp-for="CategoriaNome" class="form-control" placeholder="Ex: Lanches Tradicionais" />
                <span asp-validation-for="CategoriaNome" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Descricao" class="form-label"></label>
                <input asp-for="Descricao" class="form-control" placeholder="Ex: Os melhores lanches da casa" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>

        <div class="admin-form-actions">
            <input type="submit" value="Criar Categoria" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>