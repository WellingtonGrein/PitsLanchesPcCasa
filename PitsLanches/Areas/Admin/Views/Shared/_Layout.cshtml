<!DOCTYPE html>
<html lang="pt-br">
<head>
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PitsLanches Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="admin-body">
    <aside class="admin-sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo-container">
                <img src="~/images/PitsLanches.png" class="sidebar-logo" alt="PitsLanches Logo" />
            </div>
            <h5>Painel PitsLanches</h5>
        </div>
        <ul class="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-house-door-fill"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-controller="AdminLanches" asp-action="Index">
                    <i class="bi bi-cup-hot-fill"></i> Lanches
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-controller="AdminCategorias" asp-action="Index">
                    <i class="bi bi-tags-fill"></i> Categorias
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-controller="AdminPedidos" asp-action="Index">
                    <i class="bi bi-receipt-cutoff"></i> Pedidos
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-controller="AdminRelatorioVendas" asp-action="Index">
                    <i class="bi bi-file-earmark-spreadsheet-fill"></i> Relatório
                </a>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-bar-chart-line-fill"></i> Gráficos
                </a>
                <ul class="dropdown-menu dropdown-menu-dark border-0 shadow" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="AdminGrafico" asp-action="Index">Vendas Anual</a></li>
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="AdminGrafico" asp-action="VendasMensal" asp-route-dias="30">Vendas Mensal</a></li>
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="AdminGrafico" asp-action="VendasSemanal" asp-route-dias="7">Vendas Semanal</a></li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-controller="AdminImagens" asp-action="Index">
                    <i class="bi bi-images"></i> Imagens
                </a>
            </li>
        </ul>
        <div class="sidebar-footer">
            <p><a target="_blank" href="https://www.youtube.com/watch?v=dQw4w9WgXcQ&list=RDdQw4w9WgXcQ&start_radio=1">&copy; 2025 - PitsLanches</a></p>
        </div>
    </aside>

    <div class="admin-main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>