@model ReflectionIT.Mvc.Paging.PagingList<PitsLanches.Models.Pedido>

@{
    ViewData["Title"] = "Gerenciar Pedidos";
}

<div class="admin-page-header">
    <h1>Pedidos</h1>
</div>

<div class="admin-content-card">
    <div class="admin-toolbar">
        <form method="get" class="form-inline">
            <input name="filter" class="form-control" placeholder="Filtrar por nome..." value="@Model.RouteValue["Filter"]" />
            <button type="submit" class="btn btn-outline-secondary">
                <i class="bi bi-search"></i> Procurar
            </button>
        </form>
        <span class="text-muted">Total de Pedidos: <strong>@Model.TotalRecordCount</strong></span>
    </div>

    @if (Model.Any())
    {
        <div class="pagination-container">
            <vc:pager paging-list="@Model"></vc:pager>
        </div>

        <table class="table-admin">
            <thead>
                <tr>
                    <th>Cliente</th>
                    <th>Data do Pedido</th>
                    <th>Telefone</th>
                    <th class="text-center" style="min-width: 160px;">Situação</th>
                    <th class="text-end">Gerenciar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@Html.DisplayFor(modelItem => item.Nome) @Html.DisplayFor(modelItem => item.Sobrenome)</strong></td>
                        <td>@item.PedidoEnviado.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td class="text-center align-middle">
                            @if (item.PedidoEntregueEm == null)
                            {
                                <a asp-action="ConcluirEntrega" asp-route-id="@item.PedidoId"
                                   class="btn btn-outline-success btn-sm rounded-pill px-3"
                                   title="Confirmar que foi entregue">
                                    <i class="bi bi-truck me-1"></i> Confirmar Entrega
                                </a>
                            }
                            else
                            {
                                <div class="d-flex flex-column align-items-center justify-content-center">
                                    <span class="text-success fw-bold small">
                                        <i class="bi bi-check-circle-fill me-1"></i> Entregue
                                    </span>
                                    <span class="text-muted" style="font-size: 0.75rem;">
                                        @item.PedidoEntregueEm?.ToString("dd/MM/yyyy HH:mm")
                                    </span>
                                </div>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group admin-actions">
                                <a asp-action="PedidoLanches" asp-route-id="@item.PedidoId" class="btn btn-outline-success" title="Ver Itens do Pedido">
                                    <i class="bi bi-receipt-cutoff"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.PedidoId" class="btn btn-outline-primary" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.PedidoId" class="btn btn-outline-info" title="Detalhes">
                                    <i class="bi bi-search"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PedidoId" class="btn btn-outline-danger" title="Deletar">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="admin-empty-state">
            <i class="bi bi-cart-x"></i>
            <h4>Nenhum Pedido Encontrado</h4>
            <p class="text-muted">Ainda não há pedidos cadastrados ou nenhum corresponde à sua busca.</p>
        </div>
    }
</div>