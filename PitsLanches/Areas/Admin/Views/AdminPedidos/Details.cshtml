@model PitsLanches.Models.Pedido
@{
    ViewData["Title"] = "Detalhes do Pedido";
}

<div class="admin-page-header">
    <h1>Detalhes do Pedido #@Model.PedidoId</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-2"></i> Voltar para a Lista
    </a>
</div>

<div class="admin-content-card">
    <div class="row">
        <div class="col-md-6">
            <h4>Informações do Cliente</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Nome</dt>
                <dd class="col-sm-8">@Model.Nome @Model.Sobrenome</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Telefone</dt>
                <dd class="col-sm-8">@Model.Telefone</dd>
            </dl>
        </div>
        <div class="col-md-6">
            <h4>Datas e Status</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Data do Pedido</dt>
                <dd class="col-sm-8">@Model.PedidoEnviado.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-4">Data da Entrega</dt>
                <dd class="col-sm-8">@(Model.PedidoEntregueEm?.ToString("dd/MM/yyyy HH:mm") ?? "Pendente")</dd>
            </dl>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <h4>Endereço de Entrega</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Endereço</dt>
                <dd class="col-sm-9">@Model.Endereco1</dd>

                <dt class="col-sm-3">Complemento</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Endereco2) ? "<i>N/A</i>" : Model.Endereco2)</dd>

                <dt class="col-sm-3">Cidade</dt>
                <dd class="col-sm-9">@Model.Cidade</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@Model.Estado</dd>

                <dt class="col-sm-3">CEP</dt>
                <dd class="col-sm-9">@Model.Cep</dd>
            </dl>
        </div>
    </div>

    <div class="admin-form-actions">
        <a asp-action="Edit" asp-route-id="@Model?.PedidoId" class="btn btn-primary">
            <i class="bi bi-pencil-fill me-2"></i> Editar Pedido
        </a>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</div>