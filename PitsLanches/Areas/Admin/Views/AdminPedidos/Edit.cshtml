@model PitsLanches.Models.Pedido
@{
    ViewData["Title"] = "Editar Pedido";
}

<div class="admin-page-header">
    <h1>Editar Pedido #@Model.PedidoId</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-2"></i> Voltar para a Lista
    </a>
</div>

<div class="admin-content-card">
    <form asp-action="Edit" class="admin-form" role="form">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="PedidoId" />

        <div class="form-section">
            <h4 class="form-section-title">Informações do Cliente</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Sobrenome" class="form-label"></label>
                    <input asp-for="Sobrenome" class="form-control" />
                    <span asp-validation-for="Sobrenome" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Telefone" class="form-label"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-section">
            <h4 class="form-section-title">Endereço de Entrega</h4>
            <div class="mb-3">
                <label asp-for="Endereco1" class="form-label"></label>
                <input asp-for="Endereco1" class="form-control" />
                <span asp-validation-for="Endereco1" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Endereco2" class="form-label"></label>
                <input asp-for="Endereco2" class="form-control" />
                <span asp-validation-for="Endereco2" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Cep" class="form-label"></label>
                    <input asp-for="Cep" class="form-control" />
                    <span asp-validation-for="Cep" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Cidade" class="form-label"></label>
                    <input asp-for="Cidade" class="form-control" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Estado" class="form-label"></label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-section">
            <h4 class="form-section-title">Datas e Status</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PedidoEnviado" class="form-label"></label>
                    <input asp-for="PedidoEnviado" class="form-control" />
                    <span asp-validation-for="PedidoEnviado" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="PedidoEntregueEm" class="form-label"></label>
                    <input asp-for="PedidoEntregueEm" class="form-control" />
                    <span asp-validation-for="PedidoEntregueEm" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="admin-form-actions">
            <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>